<div class="author">
    <h1 class="author_heading">Hi, I am Raddy</h1>
    <p class="author_body">Web developer and content creator</p>
</div>

<img src="/img/hero-image.webp" alt="person looking through window" class="hero-image" width="981" height="528">

    <section class="article">
        <h2 class="article_heading">Latest Posts</h2>

        <ul class="artricle_ul">
            <% data.forEach(post => { %>
                <li>
                    <a href="/post/<%= post._id %>">
                        <span><%= post.title %></span>
                        <span class="article_list_date"><%= post.createdAt.toDateString() %></span>
                    </a>
                </li>
            <% }) %>
        </ul>

        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
         
    </section>
 